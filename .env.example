# WebSocket Server Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8765
WEBSOCKET_MAX_CONNECTIONS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/mobile-automation.log

# Android Configuration
ADB_PATH=adb
ADB_TIMEOUT=30
ADB_MAX_BUFFER_SIZE=4194304

# iOS Configuration
WDA_PORT=8100
WDA_TUNNEL_PORT=60105
SIMCTL_PATH=xcrun simctl
GO_IOS_PATH=ios

# Image Processing
IMAGEMAGICK_ENABLED=false
IMAGE_MAX_SIZE=1920x1080
IMAGE_QUALITY=90

# Device Configuration
DEVICE_SELECTION_TIMEOUT=30
AUTO_SELECT_SINGLE_DEVICE=true

# Security
WEBSOCKET_AUTH_ENABLED=false
WEBSOCKET_AUTH_TOKEN=your-secret-token-here

# Monitoring & Telemetry
TELEMETRY_ENABLED=false
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=false
